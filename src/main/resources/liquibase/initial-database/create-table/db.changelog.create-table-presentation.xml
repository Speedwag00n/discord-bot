<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="create-presentation-table" author="IliaNemankov" runOnChange="true">
        <createTable tableName="presentation">
            <column name="guild_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="identifier" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="source" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="duration" type="INT" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="BOOLEAN" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="message" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <addUniqueConstraint
                tableName="presentation"
                columnNames="guild_id, user_id"
                constraintName="unique_constraint-presentation-guild_id_user_id"
        />
    </changeSet>

</databaseChangeLog>