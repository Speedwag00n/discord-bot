<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="create-playlist_to_music_link-table" author="IliaNemankov" runOnChange="true">
        <createTable tableName="playlist_to_music_link">
            <!--Primary keys-->
            <column name="playlist_id" type="BIGINT"/>
            <column name="music_link_id" type="BIGINT"/>
        </createTable>

        <addPrimaryKey
                columnNames="playlist_id, music_link_id"
                constraintName="primary_key-playlist_to_music_link"
                tableName="playlist_to_music_link"/>

        <addForeignKeyConstraint
                baseTableName="playlist_to_music_link"
                baseColumnNames="playlist_id"
                constraintName="foreign_key-playlist_to_music_link-playlist"
                referencedTableName="playlist"
                referencedColumnNames="playlist_id"
                onDelete="CASCADE"
                onUpdate="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="playlist_to_music_link"
                baseColumnNames="music_link_id"
                constraintName="foreign_key-playlist_to_music_link-music_link"
                referencedTableName="music_link"
                referencedColumnNames="music_link_id"
                onDelete="CASCADE"
                onUpdate="CASCADE"/>
    </changeSet>

</databaseChangeLog>